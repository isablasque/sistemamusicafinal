@model IEnumerable<sistemamusicafinal.Models.Album>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de álbuns</h1>

<p>
    <a asp-action="Create">Cadastrar um novo álbum</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TituloAlbum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeneroAlbum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CapaAlbum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TituloAlbum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeneroAlbum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CapaAlbum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantor.NomeCantor)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
