@model sistemamusicafinal.Models.Cantor

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar o cantor</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NomeCantor" class="control-label"></label>
                <input asp-for="NomeCantor" class="form-control" />
                <span asp-validation-for="NomeCantor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GeneroCantor" class="control-label"></label>
                <input asp-for="GeneroCantor" class="form-control" />
                <span asp-validation-for="GeneroCantor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar alterações" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
