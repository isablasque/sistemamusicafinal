@model sistemamusicafinal.Models.Musica

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar a música</h1>

<hr />
<div class="editar">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TituloMusica" class="control-label"></label>
                <input asp-for="TituloMusica" class="form-control" />
                <span asp-validation-for="TituloMusica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DuracaoMusica" class="control-label"></label>
                <input asp-for="DuracaoMusica" class="form-control" />
                <span asp-validation-for="DuracaoMusica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumId" class="control-label"></label>
                <select asp-for="AlbumId" class="form-control" asp-items="ViewBag.AlbumId"></select>
                <span asp-validation-for="AlbumId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar alterações" class="btn btn-primary botao" />
            </div>
        </form>
    </div>
    <a asp-action="Index" class="voltar">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
